{
  "name": "tamaru",
  "description": "tamaru",
  "version": "1.0.1",
  "author": "bouzuya <m@bouzuya.net> (http://bouzuya.net/)",
  "bugs": {
    "url": "https://github.com/bouzuya/tamaru/issues"
  },
  "dependencies": {
    "googleapis": "^30.0.0"
  },
  "devDependencies": {
    "bower": "^1.8.4",
    "mkdirp": "^0.5.1",
    "nodemon": "^1.17.4",
    "npm-run-all": "^4.1.2",
    "pulp": "^12.2.0",
    "purescript": "^0.11.7",
    "rimraf": "^2.6.2"
  },
  "homepage": "https://github.com/bouzuya/tamaru#readme",
  "keywords": [],
  "license": "MIT",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bouzuya/tamaru.git"
  },
  "scripts": {
    "bower:install": "bower install",
    "build": "npm-run-all -p 'build:*'",
    "build:client": "npm-run-all -s 'build:client:dir' 'build:client:scripts'",
    "build:client:dir": "mkdirp public/scripts",
    "build:client:scripts": "pulp browserify --main Client.Main --optimise --to public/scripts/index.js",
    "build:server": "pulp build --main Server.Main",
    "clean": "rimraf .pulp-cache output",
    "prepare": "npm-run-all -s bower:install clean build",
    "pulp": "pulp",
    "repl": "pulp repl",
    "start": "node --eval \"require('./output/Server.Main').main();\"",
    "test": "pulp test",
    "watch": "npm-run-all -p 'watch:*'",
    "watch:client": "npm-run-all -s 'watch:client:dir' 'watch:client:scripts'",
    "watch:client:dir": "mkdirp public/scripts",
    "watch:client:scripts": "pulp --watch browserify --main Client.Main --optimise --to public/scripts/index.js",
    "watch:server": "pulp --watch build --main Server.Main",
    "watch:start": "nodemon --delay 2 --watch output --exec 'npm start'"
  }
}
